<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:padding="2dp" >

                    <TextView
                        android:id="@+id/txt_edit_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2014.10.11.목"
                        android:textColor="#0099ED"
                        android:textSize="20sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/txt_edit_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Title"
                    android:singleLine="true"
                    android:textColor="@color/text_gray"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >
                </LinearLayout>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1" >

                <EditText
                    android:id="@+id/txt_edit_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
					android:minHeight="350dp"
                    android:background="@null"
                    android:hint="Today is..."
                    android:gravity="top"
                    android:textColor="@color/text_gray" />
            </ScrollView>

            <LinearLayout
                android:id="@+id/layout_edit_user_add_info"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dip"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/item_img_diary_tag"
                        android:layout_width="16dp"
                        android:layout_height="15dp"
                        android:layout_margin="1dp"
                        android:paddingBottom="1.5dp"
                        android:paddingTop="1.5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tag2" />

                    <TextView
                        android:id="@+id/txt_edit_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dip"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/item_img_diary_folder"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:layout_margin="1dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/folder_list" />

                    <TextView
                        android:id="@+id/txt_edit_folder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dip"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/item_img_diary_location"
                        android:layout_width="13dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="2dp"
                        android:paddingBottom="2dp"
                        android:src="@drawable/location3" />

                    <TextView
                        android:id="@+id/txt_edit_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_edit_menu"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_gray_light"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_edit_gallery"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:src="@drawable/gallery" />

        <ImageView
            android:id="@+id/img_edit_tag"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:src="@drawable/tag2" />

        <ImageView
            android:id="@+id/img_edit_folder"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/folder_list" />

        <ImageView
            android:id="@+id/img_edit_location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/location_sq" />

        <ImageView
            android:id="@+id/img_edit_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/add2" />

        <ImageView
            android:id="@+id/img_edit_template"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/template5" />

        <ImageView
            android:id="@+id/img_edit_setting"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/theee_set2" />

<!--          저장 버튼 사라지면 셋팅 이미지뷰 복구할것  -->
<!--         <ImageView -->
<!--             android:id="@+id/img_edit_setting" -->
<!--             android:layout_width="40dp" -->
<!--             android:layout_height="40dp" -->
<!--             android:layout_marginBottom="5dp" -->
<!--             android:layout_marginLeft="1dp" -->
<!--             android:layout_marginRight="1dp" -->
<!--             android:layout_marginTop="5dp" -->
<!--             android:src="@drawable/theee_set2" /> -->
        <ImageView
            android:id="@+id/img_edit_save"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/done" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_edit_add"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ListView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/bg_gray_light" >
        </ListView>

        <GridView
            android:id="@+id/sticker_gridview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@color/bg_gray"
            android:clipToPadding="false"
            android:gravity="center"
            android:numColumns="5"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:scrollbars="@null"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" />
        <!-- <LinearLayout -->
        <!-- android:layout_width="0dp" -->
        <!-- android:layout_height="match_parent" -->
        <!-- android:layout_weight="7" -->
        <!-- android:background="@color/bg_gray" > -->
        <!-- </LinearLayout> -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_edit_template"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ExpandableListView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/bg_gray_light" >
        </ExpandableListView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@color/bg_gray" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>