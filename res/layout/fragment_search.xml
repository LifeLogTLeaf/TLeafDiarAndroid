<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="3dp"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/spin_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4" />

        <AutoCompleteTextView
            android:id="@+id/autotxt_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:ems="10"
            android:hint="search tag.."
            android:textColor="@color/diary_title" >

            <requestFocus />
        </AutoCompleteTextView>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="@color/diary_title"
            android:layout_weight="1"
            android:src="@drawable/search" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottom_menu"
        android:minHeight="72dp"
        android:orientation="horizontal" >
    </LinearLayout>

    <ListView
        android:id="@+id/list_diary_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>