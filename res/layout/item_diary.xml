<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.2"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="4dip"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:paddingTop="4dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EBF7FF"
            android:padding="2dp" >

            <TextView
                android:id="@+id/item_txt_diary_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014.10.11.목 날씨  " />
        </LinearLayout>

        <TextView
            android:id="@+id/item_txt_diary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:text="제목"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_txt_diary_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:paddingRight="2dip"
            android:singleLine="true"
            android:text="내용" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/item_img_diary_tag"
                    android:layout_width="16dp"
                    android:layout_height="15dp"
                    android:layout_margin="1dp"
                    android:paddingBottom="1.5dp"
                    android:paddingTop="1.5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tag2" />

                <TextView
                    android:id="@+id/item_txt_diary_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="태그   " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/item_img_diary_folder"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_margin="1dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/folder_list" />

                <TextView
                    android:id="@+id/item_txt_diary_folder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="폴더     " >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/item_img_diary_location"
                    android:layout_width="13dp"
                    android:layout_height="15dp"
                    android:paddingBottom="2dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/location3" />

                <TextView
                    android:id="@+id/item_txt_diary_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위치   " />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_img_diary"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@drawable/jazz" />

</LinearLayout>